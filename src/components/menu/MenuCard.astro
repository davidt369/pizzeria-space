---
interface Props {
    title: string;
    price: string;
    description: string;
    image: string;
}

const { title, price, description, image } = Astro.props;
---

<div class="bg-slate-800 rounded-lg overflow-hidden shadow-lg transition-transform hover:scale-105">
    <img 
        src={image} 
        alt={title}
        class="w-full h-48 object-cover"
        onerror="this.src='/pizzas/default-pizza.jpg'"
    />
    <div class="p-6">
        <div class="flex justify-between items-center mb-4">
            <h3 class="text-xl font-bold text-white">{title}</h3>
            <span class="text-lg font-semibold text-green-400">Bs.{price}</span>
        </div>
        <p class="text-gray-300">{description}</p>
        <button class="mt-4 w-full bg-green-500 text-white py-2 px-4 rounded-md hover:bg-green-600 transition-colors">
            Ordenar Ahora
        </button>
    </div>
</div>
