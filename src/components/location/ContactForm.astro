<form class="space-y-4">
    <div>
        <label for="name" class="block text-white mb-2">Nombre</label>
        <input
            type="text"
            id="name"
            name="name"
            class="w-full px-4 py-2 rounded-md bg-slate-700 text-white border border-slate-600 focus:border-green-500 focus:outline-none"
            required
        />
    </div>
    
    <div>
        <label for="email" class="block text-white mb-2">Email</label>
        <input
            type="email"
            id="email"
            name="email"
            class="w-full px-4 py-2 rounded-md bg-slate-700 text-white border border-slate-600 focus:border-green-500 focus:outline-none"
            required
        />
    </div>
    
    <div>
        <label for="message" class="block text-white mb-2">Mensaje</label>
        <textarea
            id="message"
            name="message"
            rows="4"
            class="w-full px-4 py-2 rounded-md bg-slate-700 text-white border border-slate-600 focus:border-green-500 focus:outline-none"
            required
        ></textarea>
    </div>
    
    <button
        type="submit"
        class="w-full bg-green-500 text-white py-2 px-4 rounded-md hover:bg-green-600 transition-colors"
    >
        Enviar Mensaje
    </button>
</form>
